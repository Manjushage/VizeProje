@{
    ViewData["Title"] = "Home Page";
}
@model IEnumerable<Survey>
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger text-center" role="alert">
        @TempData["ErrorMessage"]
    </div>
}
<div class="container mt-4">
    <h2 class="mb-4 text-center">Aktif Anketler</h2>

    <table class="table table-striped table-bordered shadow-sm">
        <thead class="thead-dark">
            <tr>
                <th>Başlık</th>
                <th>Açıklama</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var survey in Model)
            {
                <tr>
                    <td>@survey.Title</td>
                    <td>@survey.Description</td>
                    <td class="text-center">
                        <form asp-action="TakeSurvey" asp-controller="Survey" method="post">
                            <input type="hidden" name="surveyId" value="@survey.Id" />
                            <button type="submit" class="btn btn-success btn-sm rounded-pill shadow-sm">Başvur</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<style>
    .table th, .table td {
        text-align: center;
        vertical-align: middle;
    }

    .table {
        border-radius: 10px;
        overflow: hidden;
    }

    .table-striped tbody tr:nth-of-type(odd) {
        background-color: #f9f9f9;
    }

    .thead-dark th {
        background-color: #343a40;
        color: white;
    }

    .btn {
        font-size: 1rem;
        padding: 10px 20px;
    }

        .btn:hover {
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

    .container {
        max-width: 1200px;
    }
</style>
